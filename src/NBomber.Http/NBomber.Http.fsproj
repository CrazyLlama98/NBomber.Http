<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>PragmaticFlow</Authors>
    <Company>PragmaticFlow</Company>
    <Version>2.0.0-rc3</Version>
    <Copyright>PragmaticFlow@2021</Copyright>
    <PackageLicenseUrl>https://github.com/PragmaticFlow/NBomber.Http/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/PragmaticFlow/NBomber.Http</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/PragmaticFlow/NBomber/master/assets/nbomber_icon.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/PragmaticFlow/NBomber.Http</RepositoryUrl>
    <PackageTags>load-testing, performance-testing, integration-testing, http, fsharp</PackageTags>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <Description>NBomber plugin to defining HTTP scenarios.</Description>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Http.fs" />
    <Compile Include="Api\FSharp.fs" />
    <Compile Include="Api\CSharp.fs" />
    <Compile Include="CommandLineExec.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NBomber" Version="2.0.0-rc3" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="5.0.0" />
  </ItemGroup>

</Project>
